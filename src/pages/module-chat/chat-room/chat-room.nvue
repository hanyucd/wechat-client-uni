  // #ifdef APP-NVUE
  // @ts-ignore
  textareaRef.value.blur();
  // #endif
};

const	changeActionOrEmoticon = (mode: TInputMode) => {
  if (inputMode.value !== mode) {
    inputMode.value = mode;
  } else {
    inputMode.value = ('' as TInputMode);
  }

  // 隐藏软键盘
  uni.hideKeyboard();
  // 重新计算聊天模块高度
