 * @param msgData 消息数据
 * @param msgOpt 消息选项
 */
const sendChatMsg = (msgType = 'text', msgData = '', msgOpt = {}) =>{
  let msgObj = { from_user_id: 1, isremove: false, avatar: 'https://img.yzcdn.cn/vant/cat.jpeg', nickname: '艾伦沃克', type: 'text', create_time: '1643252041', data: '' };
