{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
		}
	},
	"globalStyle": {
		// #ifndef APP
		"navigationStyle": "custom",
		// #endif
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "V信",
		"navigationBarBackgroundColor": "#F8F8F8",
		// #ifdef MP
		// "backgroundColor": "#F8F8F8",
		// #endif
		"app-plus": {
			"titleNView": false, // 自定义顶部导航栏（如果是App下，建议使用titleNView或subNVue，体验更好）
			"scrollIndicator": "none" // 滚动条显示策略 (不显示)
		}
	},
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#08C261",
		"borderStyle": "white",
		"backgroundColor": "#F7F7F7",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/tabbar/index/index",
				"iconPath": "static/tabbar/index.png",
				"selectedIconPath": "static/tabbar/index-select.png"
			},
			{
				"text": "通讯录",
				"pagePath": "pages/tabbar/contact/contact",
				"iconPath": "static/tabbar/contact.png",
				"selectedIconPath": "static/tabbar/contact-select.png"
			},
			{
				"text": "发现",
				"pagePath": "pages/tabbar/find/find",
				"iconPath": "static/tabbar/find.png",
				"selectedIconPath": "static/tabbar/find-select.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/tabbar/profile/profile",
				"iconPath": "static/tabbar/profile.png",
				"selectedIconPath": "static/tabbar/profile-select.png"
			}
		]
	},
	"pages": [
		// 登录
		{
			"path": "pages/login/login",
			"style": {}
		},
		// tabbar 首页
		{
			"path": "pages/tabbar/index/index",
			"style": {}
		},
		// tabbar 通讯录
		{
			"path": "pages/tabbar/contact/contact",
			"style": {}
		},
		// tabbar 朋友圈
		{
			"path": "pages/tabbar/find/find",
			"style": {}
		},
		// tabbar 我的
		{
			"path": "pages/tabbar/profile/profile",
			"style": {
				"app-plus": {
					"background": "#EDEDED"
				}
			}
		},
		// 聊天室
		{
			"path": "pages/module-chat/chat-room/chat-room",
			"style": {
				"app-plus": {}
			}
		},
		// 聊天设置
		{
			"path": "pages/module-chat/chat-set/chat-set",
			"style": {
				"app-plus": {
					"background": "#EDEDED"
				}
			}
		},
		// 用户(好友)主页
		{
			"path": "pages/module-friend/friend-mine/friend-mine",
			"style": {
				"app-plus": {
					"background": "#EDEDED"
				}
			}
		},
		// 用户备注
		{
			"path": "pages/module-friend/friend-remark/friend-remark",
			"style": {
				"app-plus": {
					"background": "#EDEDED"
				}
			}
		},
		// 用户标签设置
		{
			"path": "pages/module-friend/friend-tag-set/friend-tag-set",
			"style": {
				"app-plus": {}
			}
		},
		// 设置朋友圈动态权限
		{
			"path": "pages/module-friend/friend-circle-auth/friend-circle-auth",
			"style": {
				"app-plus": {}
			}
		},
		// 好友搜索
		{
			"path": "pages/module-friend/friend-search/friend-search",
			"style": {
				"app-plus": {}
			}
		},
		// 好友申请
		{
			"path": "pages/module-friend/friend-apply/friend-apply",
			"style": {}
		},
		// 好友申请列表
		{
			"path": "pages/module-friend/friend-apply-list/friend-apply-list",
			"style": {
				"enablePullDownRefresh": true
			}
		},
		// 用户投诉
		{
			"path": "pages/module-friend/friend-report/friend-report",
			"style": {
				"app-plus": {}
			}
		},
		// 推荐给好友
		{
			"path": "pages/module-friend/friend-share/friend-share",
			"style": {
				"app-plus": {}
			}
		},
		// 朋友圈动态
		{
			"path": "pages/module-find/firend-find/firend-find",
			"style": {
				"app-plus": {}
			}
		},
		// 朋友圈发布
		{
			"path": "pages/module-find/friend-find-publish/friend-find-publish",
			"style": {
				"app-plus": {}
			}
		},
		// 个人信息
		{
			"path": "pages/module-profile/profile-info/profile-info",
			"style": {
				"app-plus": {}
			}
		},
		// 二维码名片
		{
			"path": "pages/module-profile/porfile-qrcode/porfile-qrcode",
			"style": {
				"app-plus": {
					"background": "#EDEDED"
				}
			}
		},
		// 我的收藏
		{
			"path": "pages/module-profile/profile-fava/profile-fava",
			"style": {
				"app-plus": {}
			}
		},
		// 我的设置
		{
			"path": "pages/module-profile/profile-set/profile-set",
			"style": {}
		}
	]
}
